<%- include("../layout/admin/header.ejs") %>
    <%- include("../layout/admin/navbar.ejs") %>
        <%- include("../layout/admin/sidebar.ejs") %>
            <main id="main" class="main">
                <div class="pagetitle">
                    <h1>Add Coupon</h1>
                    <nav>
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                            <li class="breadcrumb-item active">Add coupon</li>
                        </ol>
                    </nav>
                </div>
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Add Coupon Form</h5>

                        <!-- Multi Columns Form -->
                        <form action="/admin/edit-coupon/<%= couponData._id %>" method="post" class="row g-3"
                            id="add-coupon-form">
                            <div class="col-md-12">
                                <label class="form-label">Coupon code</label>
                                <input type="text" class="form-control" name="code" value="<%= couponData.code %>">
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Percentage off</label>
                                <input type="number" class="form-control" name="percentageOff" min="0"
                                    value="<%= couponData.percentageOff %>">
                            </div>
                            <div class="col-md-6">
                                <label fclass="form-label">Maxdiscount</label>
                                <input type="number" class="form-control" name="maxDiscount" min="0"
                                    value="<%= couponData.maxDiscount %>">
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Expiry Date</label>
                                <input type="date" class="form-control" name="expiryDate"
                                    value="<%= couponData.expiryDate.toISOString().slice(0, 10); %>">
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Minimum Purchase Amount</label>
                                <input type="number" class="form-control" name="minimumPurchseAmount" min="0"
                                    value="<%= couponData.minimumPurchseAmount %>">
                            </div>

                            <div class="text-center">
                                <button type="submit" class="btn btn-primary">Add coupon</button>
                            </div>
                        </form><!-- End Multi Columns Form -->

                    </div>
                </div>

            </main>

            <script>
                function upperCaseF(a) {
                    setTimeout(function () {
                        a.value = a.value.toUpperCase();
                    }, 1);
                }
            </script>



