<%- include("../layout/user/user_header.ejs") %>

    <!-- Header -->
    <header class="header-v4">
        <!-- Header desktop -->
        <%- include("../layout/user/user_navbar.ejs") %>

    </header>

    <!-- Product -->
    <section>
        <div class="bg0 m-t-23 p-b-140">
            <div class="container">
                <div class="flex-w flex-sb-m p-b-52">
                    <div class="flex-w flex-l-m filter-tope-group m-tb-10">
                        <button class="stext-106 cl6 hov1 bor3 trans-04 m-r-32 m-tb-5 how-active1" data-filter="*">
                            All Products
                        </button>

                        <button class="stext-106 cl6 hov1 bor3 trans-04 m-r-32 m-tb-5" data-filter=".MSI">
                            MSI
                        </button>

                        <button class="stext-106 cl6 hov1 bor3 trans-04 m-r-32 m-tb-5" data-filter=".ASUS">
                            ASUS ROG
                        </button>

                        <button class="stext-106 cl6 hov1 bor3 trans-04 m-r-32 m-tb-5" data-filter=".RAZER">
                            RAZER
                        </button>

                        <button class="stext-106 cl6 hov1 bor3 trans-04 m-r-32 m-tb-5" data-filter=".LENOVO">
                            LENOVO
                        </button>

                        <button class="stext-106 cl6 hov1 bor3 trans-04 m-r-32 m-tb-5" data-filter=".Desktop">
                            DESKTOP
                        </button>

                        <button class="stext-106 cl6 hov1 bor3 trans-04 m-r-32 m-tb-5" data-filter=".Laptop">
                            LAPTOP
                        </button>
                    </div>

                    <div class="flex-w flex-c-m m-tb-10">
                        <div class="flex-c-m stext-106 cl6 size-105 bor4 pointer hov-btn3 trans-04 m-tb-4 js-show-search"
                            id="searchbar">
                            <i class="icon-search cl2 m-r-6 fs-15 trans-04 zmdi zmdi-search"></i>
                            <i class="icon-close-search cl2 m-r-6 fs-15 trans-04 zmdi zmdi-close dis-none"></i>
                            Search
                        </div>
                    </div>

                    <!-- Search product -->
                    <div class="dis-none panel-search w-full p-t-10 p-b-15">
                        <div class="bor8 dis-flex p-l-15">
                            <button class="size-113 flex-c-m fs-16 cl2 hov-cl1 trans-04">
                                <i class="zmdi zmdi-search"></i>
                            </button>

                            <input class="mtext-107 cl2 size-114 plh2 p-r-15" type="text" name="search-product"
                                placeholder="Search">
                        </div>
                    </div>
                </div>


                <div class="row isotope-grid">
                    <% productData.forEach(element=> { %>
                        <div class="col-sm-6 col-md-4 col-lg-3 p-b-35 isotope-item <%= element.brand %> <%= element.category.categoryName %>">
                            <!-- Block2 -->
                            <div class="block2" style="text-align: center;">

                                <div class="block2-pic hov-img0">
                                    <img src="/product_images/<%= element.images[0] %>" alt="IMG-PRODUCT"
                                        style="width: 255px; height: 185px;">

                                    <a href="/singleproductpage/<%= element._id %>"
                                        class="block2-btn flex-c-m stext-103 cl2 size-102 bg0 bor2 hov-btn1 p-lr-15 trans-04 ">
                                        Quick View
                                    </a>
                                </div>

                                <div class="block2-txt flex-w flex-t p-t-14">
                                    <div class="block2-txt-child1 flex-col-l ">
                                        <a href="product-detail.html"
                                            class="stext-104 cl4 hov-cl1 trans-04 js-name-b2 p-b-6 pname">
                                            <%= element.product_name %>
                                        </a>

                                        <span class="stext-105 cl3">
                                            Rs : <%= element.price %>
                                        </span>
                                    </div>


                                    <div class="block2-txt-child2 flex-r p-t-3">
                                        <% if(wishlist.includes(element.product_name)){ %>
                                            <a href="" class="btn-addwish-b2 dis-block pos-relative">
                                                <i id="<%= element._id %>" class="fa fa-heart" style="color: red;"></i>
                                            </a>
                                            <% }else{ %>
                                                <a href="" class="btn-addwish-b2 dis-block pos-relative js-addwish-b2"
                                                    onclick="addTowishlist('<%= element._id %>')">
                                                    <i id="<%= element._id %>" class="fa fa-heart"
                                                        style="color: rgb(188, 181, 181);"></i>
                                                </a>
                                                <% } %>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <% }); %>
                </div>
            </div>
    </section>

    <script>
        function addTowishlist(productId) {
            $.ajax({
                url: '/addtowishlist',
                data: {
                    productId: productId,
                },
                method: 'post',
                success: (response) => {

                    document.getElementById(productId).style.color = "red"

                }
            })
        }
        
        // Add event listener to search input field
            $('#searchbar input[name="search-product"]').on('input', function () {
                var query = $(this).val().toLowerCase();

                $('.isotope-item').each(function () {
                    var productName = $(this).find('.pname').text().toLowerCase();

                    if (productName.indexOf(query) === -1) {
                        $(this).hide();
                    } else {
                        $(this).show();
                    }
                });
            });


