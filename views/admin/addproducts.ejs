<%- include("../layout/admin/header.ejs") %>
    <%- include("../layout/admin/navbar.ejs") %>
        <%- include("../layout/admin/sidebar.ejs") %>
            <main id="main" class="main">
                <div class="pagetitle">
                    <h1>Add Product</h1>
                    <nav>
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                            <li class="breadcrumb-item active">Add Product</li>
                        </ol>
                    </nav>
                </div>
                <% if (typeof errorMessage !== "undefined") { %>
                    <div class="alert alert-danger" role="alert">
                        All fiels are required 
                    </div>
                <% } %>
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Add product</h5>
                        <!-- General Form Elements -->
                        <form id="add-product-form" action="" method="post" enctype="multipart/form-data">
                            <div class="row mb-3">
                                <labe for="" class="col-sm-2 col-form-label">Name</labe>
                                <div class="col-sm-10">
                                    <input type="text" name="productName" class="form-control">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="" class="col-sm-2 col-form-label">Brand</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" name="brand">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label class="col-sm-2 col-form-label">Category</label>
                                <div class="col-sm-10">
                                    <select class="form-select" aria-label="Default select example" name="category">
                                        <option selected>Select the category</option>
                                        <% categoryData.forEach(element=> { %>
                                            <option>
                                                <%= element.categoryName %>
                                            </option>
                                            <% }); %>
                                    </select>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="" class="col-sm-2 col-form-label">Price</label>
                                <div class="col-sm-10">
                                    <input type="number" class="form-control" name="price">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="" class="col-sm-2 col-form-label">Stock</label>
                                <div class="col-sm-10">
                                    <input type="number" class="form-control" name="stock">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="" class="col-sm-2 col-form-label">Description</label>
                                <div class="col-sm-10">
                                    <textarea class="form-control" style="height: 100px" name="description"></textarea>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="" class="col-sm-2 col-form-label">Image Upload</label>
                                <div class="col-sm-10">
                                    <input class="form-control" multiple type="file" id="formFile" name="productImage">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label class="col-sm-2 col-form-label"></label>
                                <div class="col-sm-10">
                                    <button type="submit" class="btn btn-primary">
                                        Submit
                                    </button>
                                </div>
                            </div>
                        </form>

                    </div>
                </div>
            </main>

            <script>
                const form = document.querySelector('form');
                const submitButton = form.querySelector('button[type="submit"]');
                submitButton.addEventListener('click',(event)=>{
                    event.preventDefault()
                    if (validate()) {
                        Swal.fire({
                            position: 'top-end',
                            icon: 'success',
                            title: 'New product as added',
                            showConfirmButton: false,
                            timer: 1500
                        }).then((response)=>{
                            form.submit();
                        })
                    }
                })
                function validate() {
                        // Get form inputs
                        const productName = document.forms["add-product-form"]["productName"].value;
                        const brand = document.forms["add-product-form"]["brand"].value;
                        const category = document.forms["add-product-form"]["category"].value;
                        const price = document.forms["add-product-form"]["price"].value;
                        const stock = document.forms["add-product-form"]["stock"].value;
                        const description = document.forms["add-product-form"]["description"].value;
                        const productImage = document.forms["add-product-form"]["productImage"].value;

                        // Validate required fields
                        if (productName === "" || brand === "" || category === "Select the category" || price === "" || stock === "" || description === "" || productImage === "") {
                            alert("Please fill in all required fields");
                            return false;
                        }

                        // Validate price and stock fields are positive numbers
                        if (isNaN(price) || parseFloat(price) < 0) {
                            alert("Price must be a positive number");
                            return false;
                        }
                        if (isNaN(stock) || parseInt(stock) < 0) {
                            alert("Stock must be a positive number");
                            return false;
                        }

                        // All validations passed
                        return true;
                    }

    


            </script>
            


